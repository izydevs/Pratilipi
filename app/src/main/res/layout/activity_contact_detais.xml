<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    tools:context=".ContactDetaisActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/ic_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_height="wrap_content">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:background="@android:color/white"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:id="@+id/iv_name"
                    android:src="@drawable/ic_user_name"
                    app:layout_constraintTop_toTopOf="@+id/name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/name_title"
                    android:layout_marginStart="16dp"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Amit kumar"
                    android:textSize="18sp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/name_title"
                    app:layout_constraintStart_toEndOf="@id/iv_name"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/name_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_name"
                    app:layout_constraintBottom_toBottomOf="@id/iv_name"
                    app:layout_constraintTop_toBottomOf="@id/name" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="#f0f0f0"
                    app:layout_constraintTop_toBottomOf="@id/name_title"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@id/name_title"
                    app:layout_constraintEnd_toEndOf="@id/name_title"/>


            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:background="@android:color/white"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:id="@+id/iv_mobile"
                    android:src="@drawable/ic_phone"
                    app:layout_constraintTop_toTopOf="@+id/mobile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/mobile_title"
                    android:layout_marginStart="16dp"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@+id/mobile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="9999999999"
                    android:textSize="18sp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/mobile_title"
                    app:layout_constraintStart_toEndOf="@id/iv_mobile"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/mobile_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="mobile"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_mobile"
                    app:layout_constraintBottom_toBottomOf="@id/iv_mobile"
                    app:layout_constraintTop_toBottomOf="@id/mobile" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    app:layout_constraintTop_toBottomOf="@id/mobile_title"
                    android:layout_marginTop="16dp"
                    android:background="#f0f0f0"
                    app:layout_constraintStart_toStartOf="@id/mobile_title"
                    app:layout_constraintEnd_toEndOf="@id/mobile_title"/>


            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="16dp"
                android:background="@android:color/white"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:id="@+id/iv_email"
                    android:src="@drawable/ic_gmail"
                    app:layout_constraintTop_toTopOf="@+id/email"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/email_title"
                    android:layout_marginStart="16dp"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@+id/email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Add Email Address"
                    android:textSize="18sp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintBottom_toTopOf="@+id/email_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_email"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/email_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="email"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_email"
                    app:layout_constraintBottom_toBottomOf="@id/iv_email"
                    app:layout_constraintTop_toBottomOf="@id/email" />



            </android.support.constraint.ConstraintLayout>

        </LinearLayout>




    </android.support.v7.widget.CardView>



</android.support.constraint.ConstraintLayout>